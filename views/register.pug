doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(rel='stylesheet' href='/index.css')
  title register
.container
  h1 students register from
  h4 please enter your details
  .content
    form(action='/register' method='post')
      .form-control
        label(for='firstname') first name
        input#firstname(type='text' name='firstName' placeholder='enter first name')
      .form-control
        label(for='lastname') last name
        input#lastname(type='text' name='lastName' placeholder='enter last name')
      .form-control
        label(for='email') email address
        input#email(type='email' name='email' placeholder='eg. email@example.com')
      .form-control
        label(for='password') password
        input#password(type='password' name='password' placeholder='enter your password')
      button.btn(type='submit') register
